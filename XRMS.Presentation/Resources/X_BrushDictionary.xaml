<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Microsoft_Windows_Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero" >


    <!-- Brushes : These are used to define the color for background, foreground, selection, enabled etc of all controls
	If you want to change the color of a control you can just chnage the brush; if you want to add a new shape or change arrangement then also edit the template -->
    
    <!-- The Background Brush is used as the background for the Headers, Footers, Windows ... -->
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#FF202020" />
    <SolidColorBrush x:Key="FooterBackgroundBrush" Color="#FF202020" />

    <!-- This is a color setting for text -->
    <SolidColorBrush x:Key="WindowFontColor" Color="#FFE6E6E6" />
    <SolidColorBrush x:Key="ControlFontColor" Color="#FFE6E6E6" />
    <SolidColorBrush x:Key="HeaderFontColor" Color="#FFE6E6E6" />
    <SolidColorBrush x:Key="FooterFontColor" Color="#FFE6E6E6" />
    <SolidColorBrush x:Key="ListViewFontColor" Color="#FFFA6E15" />

    <!-- The WindowBackgroundBrush and WindowBorderBrush is used as the background and border for most windows -->
    <LinearGradientBrush x:Key="WindowBackgroundBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FFCCE6B6" Offset="0"/>
        <GradientStop Color="#FF468016" Offset="1"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="WindowBorderBrush" Color="Black"/>
    
    <!-- The PanelBackgroundBrush and PanelBorderBrush is used as the background and border for the panels
    such as the Canvas, WrapPanel, StackPanel, DockPanel, Grid -->
    <LinearGradientBrush x:Key="PanelBackgroundBrush" EndPoint="1,0.5" StartPoint="0,0.5">
        <GradientStop Color="#FF555555" Offset="0" />
        <GradientStop Color="#FF1C1C1C" Offset="1" />
    </LinearGradientBrush>
    <!--LinearGradientBrush x:Key="PanelBackgroundBrush" EndPoint="1,0.5" StartPoint="0,0.5">
        <GradientStop Color="#FF2C1308" Offset="0" />
        <GradientStop Color="#FF8F400A" Offset="1" />
    </LinearGradientBrush-->
    <SolidColorBrush x:Key="PanelBorderBrush" Color="White"/>

    <!-- The ContainerBackgroundBrush and ContainerBorderBrush is used as the background and border for content areas
    such as ScrollViewer, TreeView, ListBox, Expander, TextBox, PasswordBox, RichTextBox, Tab Control -->
    <LinearGradientBrush x:Key="ContainerBackgroundBrush" EndPoint="0.501,0.039" StartPoint="0.501,0.971">
        <GradientStop Color="#FF555555" Offset="0" />
        <GradientStop Color="#FF1C1C1C" Offset="1" />
    </LinearGradientBrush>
    <!--LinearGradientBrush x:Key="ContainerBackgroundBrush" EndPoint="0.501,0.039" StartPoint="0.501,0.971">
        <GradientStop Color="#FF2C1308" Offset="0" />
        <GradientStop Color="#FF8F400A" Offset="1" />
    </LinearGradientBrush-->
    <SolidColorBrush x:Key="ContainerBorderBrush" Color="Black"/>

    <!-- The ControlBackgroundBrush and ControlBorderBrush is used as the background and border for some controls
    such as Button, RadioButton, CheckBox, ComboBoxItem, MenuItem, TreeViewItem, RepeatButton -->
    <LinearGradientBrush x:Key="ControlBackgroundBrush" EndPoint="0.501,0.039" StartPoint="0.501,0.971">
        <GradientStop Color="#FF1F317D" Offset="0.101" />
        <GradientStop Color="#FF1F317D" Offset="0.49" />
        <GradientStop Color="#FF6C8EBD" Offset="0.51" />
        <GradientStop Color="#FF283D8C" Offset="0" />
        <GradientStop Color="#FF7094C7" Offset="0.986" />
    </LinearGradientBrush>
    <SolidColorBrush x:Key="ControlBorderBrush" Color="Black"/>

    <!-- MouseOverBackgroundBrush is used for MouseOver in Button, Radio Button, CheckBox, ComboBoxItem, MenuItem, TreeViewItem, RepeatButton -->
    <LinearGradientBrush x:Key="MouseOverBackgroundBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#00000000" Offset="1"/>
        <GradientStop Color="#4BFFFFFF" Offset="0"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="MouseOverBorderBrush" Color="#7FFFFFFF"/>

    <!-- PressedBackgroundBrush and PressedBorderBrush is used for Pressed in Button, Radio Button, CheckBox -->
    <LinearGradientBrush x:Key="PressedBackgroundBrush" EndPoint="0,1" StartPoint="0,0">
        <GradientStop Color="#BBB" Offset="0.0"/>
        <GradientStop Color="#EEE" Offset="0.1"/>
        <GradientStop Color="#EEE" Offset="0.9"/>
        <GradientStop Color="#FFF" Offset="1.0"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="PressedBorderBrush" Color="#7FFFFFFF"/>

    <!-- SelectedBackgroundBrush and SelectedBorderBrush is used for the Selected item in MenuItem, ListViewItem, ListBoxItem, ComboBoxItem-->
    <LinearGradientBrush x:Key="SelectedBackgroundBrush" EndPoint="1,0.5" StartPoint="0,0.5">
        <GradientStop Color="#CCFF6D00" Offset="0.9" />
        <GradientStop Color="#CCFF6D66" Offset="0.1" />
    </LinearGradientBrush>
    <SolidColorBrush x:Key="SelectedBorderBrush" Color="#7FFFFFFF"/>

    <!-- KeyboardFocusedBorderBrush is used to show KeyBoardFocus -->
    <LinearGradientBrush x:Key="KeyboardFocusedBorderBrush" EndPoint="0,1" StartPoint="0,0">
        <GradientStop Color="#FFF00808" Offset="0.0" />
        <GradientStop Color="#FFB91E1E" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Disabled Brushes are used for the Disabled look of each control -->
    <SolidColorBrush x:Key="DisabledForegroundBrush" Color="#888"/>
    <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="#EEE"/>
    <SolidColorBrush x:Key="DisabledBorderBrush" Color="#AAA"/>

    <!-- Used for Checkmark, Radio button, TreeViewItem, Expander ToggleButton glyphs -->
    <SolidColorBrush x:Key="GlyphBrush" Color="#444"/>
    
    
    
    
    
    
    
    
    
    
    
    
    
    <LinearGradientBrush x:Key="TextBoxBorderBrush" EndPoint="0,20" StartPoint="0,0" MappingMode="Absolute">
        <GradientStop Color="#ABADB3" Offset="0.05"/>
        <GradientStop Color="#E2E3EA" Offset="0.07"/>
        <GradientStop Color="#E3E9EF" Offset="1"/>
    </LinearGradientBrush>

    <!-- Restaurant Data Brushes -->
    <SolidColorBrush x:Key="RestaurantDataFontColor" Color="#FFFFFFFF" />

    <LinearGradientBrush x:Key="SelectedHeaderBackgroundBrush" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="#D4273D5C" Offset="0" />
        <GradientStop Color="#D4273D5C" Offset="0.5" />
        <GradientStop Color="#D44F5E8E" Offset="1" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="GridViewHeaderFontColor" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="GridViewSelectedHeaderFontColor" Color="#FFFFFFFF" />

    <SolidColorBrush x:Key="DiagramToolTipBackgroundBrush" Color="#FF202020" />
    <Geometry x:Key="DownArrowGeometry">M 0 0 L 3.5 4 L 7 0 Z</Geometry>

